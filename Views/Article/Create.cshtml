@model BlogApp.Models.Article

@{
    ViewData["Title"] = "Create Article";
}

<h2>@ViewData["Title"]</h2>

<br/>


<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model?.Title" required />
    </div>
    <div class="form-group">
        <label for="Body">Body</label>
        <textarea class="form-control" id="Body" name="Body" required>@Model?.Body</textarea>
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="date" value="@Model?.StartDate.ToString("yyyy-MM-dd")" required />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" value="@Model?.EndDate.ToString("yyyy-MM-dd")" required />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Articles</a>
</form>