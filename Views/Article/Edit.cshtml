@model BlogApp.Models.Article

@{
    ViewData["Title"] = "Edit Article";
}

<h2>@ViewData["Title"]</h2>

<br/>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ArticleId" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Body">Body</label>
        <textarea asp-for="Body" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" required />
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Save Changes</button> 
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Articles</a>

</form>

